<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_connect_relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_22"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="50dp"
        android:layout_weight="0.7"
        android:background="#007C1919"
        android:text="Welcome to our Rental House application!"
        android:textAllCaps="false"
        android:textColor="#99FF9800"

        android:textSize="16sp"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="100dp"
        android:layout_weight="0.7"
        android:background="#007C1919"
        android:text="Press Connect button to continue"
        android:textColor="#C1FFC107"
        android:textSize="16sp"

        android:textStyle="bold" />

    <Button
        android:id="@+id/connect"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="160dp"
        android:layout_height="66dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="130dp"
        android:layout_marginBottom="78dp"
        android:background="@android:drawable/button_onoff_indicator_off"
        android:hapticFeedbackEnabled="false"
        android:text="Connect!"
        android:textColor="#0C0C0C"

        android:textColorLink="#5E376D"
        android:textStyle="bold"
        app:cornerRadius="10dp" />

</android.widget.RelativeLayout>